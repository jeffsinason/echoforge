# =============================================================================
# ECHOFORGE UNIFIED DEVELOPMENT ENVIRONMENT
# =============================================================================
# Copy this file to .env and fill in your values.
# This file is the single source of truth for all development credentials.
# All variables are loaded automatically by the dev environment scripts.
# =============================================================================

# -----------------------------------------------------------------------------
# Infrastructure - PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5435
POSTGRES_DB=echoforge_hub
POSTGRES_USER=echoforge
POSTGRES_PASSWORD=your_password_here

# Full connection URL for services that need it
DATABASE_URL=postgresql://echoforge:your_password_here@localhost:5435/echoforge_hub

# -----------------------------------------------------------------------------
# Infrastructure - Redis Cache/Queue
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6382
REDIS_URL=redis://localhost:6382

# Database indices (0-15 available)
# 0 = Hub Celery broker
# 1 = Hub cache / Agent cache
# 2 = Reserved

# -----------------------------------------------------------------------------
# Service URLs & Ports
# -----------------------------------------------------------------------------
HUB_BASE_URL=http://localhost:8003
HUB_PORT=8003
AGENT_BASE_URL=http://localhost:8004
AGENT_PORT=8004
TEST_UI_PORT=8080

# -----------------------------------------------------------------------------
# Security & Secrets
# -----------------------------------------------------------------------------
# Django secret key (generate a secure random string for production)
DJANGO_SECRET_KEY=dev-secret-key-not-for-production-use-only

# Agent <-> Hub authentication (minimum 32 characters)
HUB_SERVICE_SECRET=your-32-character-service-secret-here

# Encryption key for sensitive data (Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# -----------------------------------------------------------------------------
# AI/LLM APIs
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
OPENAI_API_KEY=sk-your-openai-key-here

# -----------------------------------------------------------------------------
# Tavily API (Web Search for Agent)
# -----------------------------------------------------------------------------
# Get your API key at https://tavily.com
TAVILY_API_KEY=tvly-your-api-key-here

# -----------------------------------------------------------------------------
# Stripe (Billing)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# -----------------------------------------------------------------------------
# Google APIs (Calendar/Gmail integrations)
# -----------------------------------------------------------------------------
# Note: Variable names must match provider slug in uppercase
# E.g., GOOGLE_CALENDAR_CLIENT_ID for google_calendar provider
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# -----------------------------------------------------------------------------
# AWS (Knowledge Base Storage)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=echoforge-knowledge
AWS_S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
DJANGO_ENV=development
DJANGO_DEBUG=True

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Test Credentials (for integration testing)
# -----------------------------------------------------------------------------
TEST_API_KEY=efh_test_key_for_integration_testing_only
TEST_USERNAME=testuser
TEST_PASSWORD=testpass123
TEST_CUSTOMER_EMAIL=test@echoforge.local
